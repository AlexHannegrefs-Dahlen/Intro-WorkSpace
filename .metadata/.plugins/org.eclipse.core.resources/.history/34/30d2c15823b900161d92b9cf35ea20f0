package alex.winter_break.test;

import java.io.IOException;

public class Fraction {

	private static int numerator = 0;
	private static int denominator = 0;
	private static int numerator2 = 0;
	private static int denominator2 = 0;

	public static void fractionMenu() throws IOException {
		String[] options = new String[] { "Reduce", "Decimal", "Add", "Subtract", "Multiply", "Divide" };
		int menuSelect = ConsoleUI.promptForMenuSelection(options, false);
		if (menuSelect == 1 || menuSelect == 2) {
			boolean valid = true;
			do {
				String numeratorAsAString = null;
				String denominatorAsAString = null;
				valid = true;
				String userEnteredFraction = ConsoleUI.promptForInput("Enter fraction", false);
				int divideSign = 0;
				for (int i = 0; i < userEnteredFraction.length(); i++) {
					divideSign = userEnteredFraction.indexOf("/");
				}

				numeratorAsAString = userEnteredFraction.substring(0, divideSign);
				denominatorAsAString = userEnteredFraction.substring(divideSign, userEnteredFraction.length() - 1);

				try {
					numerator = Integer.parseInt(numeratorAsAString);
				} catch (Exception e) {
					System.out.println("Something got messed up one");
					valid = false;
				}
				try {
					denominator = Integer.parseInt(denominatorAsAString);
				} catch (Exception e) {
					System.out.println("Something got messed up two");
					valid = false;
				}
			} while (!valid);
		} else {
			boolean valid = true;
			do {
				String numerator1AsAString = null;
				String denominator1AsAString = null;
				String numerator2AsAString = null;
				String denominator2AsAString = null;
				valid = true;
				String userEnteredFraction = ConsoleUI.promptForInput("Enter first fraction", false);
				int divideSign1 = 0;
				for (int i = 0; i < userEnteredFraction.length(); i++) {
					divideSign1 = userEnteredFraction.indexOf("/");
				}

				numerator1AsAString = userEnteredFraction.substring(0, divideSign1);
				denominator1AsAString = userEnteredFraction.substring(divideSign1, userEnteredFraction.length() - 1);

				try {
					numerator = Integer.parseInt(numerator1AsAString);
				} catch (Exception e) {
					System.out.println("Something got messed up");
					valid = false;
				}
				try {
					denominator = Integer.parseInt(denominator1AsAString);
				} catch (Exception e) {
					System.out.println("Something got messed up");
					valid = false;
				}

				String userEnteredFraction2 = ConsoleUI.promptForInput("Enter second fraction", false);
				int dividesign2 = 0;
				for (int i = 0; i < userEnteredFraction2.length(); i++) {
					dividesign2 = userEnteredFraction2.indexOf("/");
				}

				numerator2AsAString = userEnteredFraction2.substring(0, dividesign2);
				denominator2AsAString = userEnteredFraction2.substring(divideSign1, userEnteredFraction2.length() - 1);

				try {
					numerator2 = Integer.parseInt(numerator2AsAString);
				} catch (Exception e) {
					System.out.println("Something got messed up");
					valid = false;
				}
				try {
					denominator2 = Integer.parseInt(denominator2AsAString);
				} catch (Exception e) {
					System.out.println("Something got messed up");
					valid = false;
				}

			} while (!valid);
		}
		if (menuSelect == 1) {
			System.out.println(reduce());
		} else if (menuSelect == 2) {
			System.out.println(decimal());
		} else if (menuSelect == 3) {
			System.out.println(add());
		} else if (menuSelect == 4) {
			System.out.println(subtract());
		} else if (menuSelect == 5) {
			System.out.println(multiply());
		} else if (menuSelect == 6) {
			System.out.println(divide());
		}
	}

	private static String add() {
		int saveddenominator = denominator;
		int saveddenominator2 = denominator2;
		numerator = numerator * saveddenominator2;
		numerator2 = numerator2 * saveddenominator;
		denominator = saveddenominator * saveddenominator2;
		denominator2 = denominator;
		int finalnumerator = numerator + numerator2;
		int finaldenominator = denominator;
		String add = finalnumerator + "/" + finaldenominator;
		return add;
	}

	private static String subtract() {
		int saveddenominator = denominator;
		int saveddenominator2 = denominator2;
		numerator = numerator * saveddenominator2;
		numerator2 = numerator2 * saveddenominator;
		denominator = saveddenominator * saveddenominator2;
		denominator2 = denominator;
		int finalnumerator = numerator - numerator2;
		int finaldenominator = denominator;
		String subtract = finalnumerator + "/" + finaldenominator;
		return subtract;
	}

	private static String multiply() {
		int numerator3 = numerator * numerator2;
		int denominator3 = denominator * denominator2;
		String multiply = numerator3 + "/" + denominator3;
		return multiply;
	}

	private static String divide() {
		int numerator3 = numerator * denominator2;
		int denominator3 = denominator * numerator2;
		String divide = numerator3 + "/" + denominator3;
		return divide;
	}

	private static double decimal() {
		return numerator / denominator;
	}

	private static String reduce() {
		int gcm = gcm(numerator, denominator);
		return (numerator / gcm) + "/" + (denominator / gcm);
	}

	public static int gcm(int a, int b) {
		return b == 0 ? a : gcm(b, a % b);
	}

}

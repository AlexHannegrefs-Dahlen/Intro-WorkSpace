package tic.tac.toe;

import java.util.ArrayList;

public class Board {

	public static ArrayList<Square> makeSquares(Square Square) {
		ArrayList<Square> squares = new ArrayList<>();
		squares.add(null);
		for (int i = 1; i < 19; i++) {	
			Square.SpaceMarker = (char) ('0' + i);
			squares.add(i, Square);
		}
		
		return squares;	
	}

	public static void printGameBoard(ArrayList<Square> squares) {
		int boardSpaces = 0;
		for (int i = 1; i < 10; i++) {
			System.out.print((squares.get(i).SpaceMarker));
			boardSpaces++;
			if (boardSpaces == 3) {
				System.out.println();
				boardSpaces = 0;
			}
		}
	}
}
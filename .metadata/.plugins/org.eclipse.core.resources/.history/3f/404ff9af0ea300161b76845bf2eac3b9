package tic.tac.toe;

import java.util.ArrayList;

public class Board {

	public static void printGameBoard(ArrayList<Square> squares) {
		int boardSpaces = 0;
		for (int i = 1; i < 10; i++) {
			System.out.print(squares.get(i).SpaceMarker);
			boardSpaces++;
			if (boardSpaces == 3) {
				System.out.println();
				boardSpaces = 0;
			}
		}
	}
}
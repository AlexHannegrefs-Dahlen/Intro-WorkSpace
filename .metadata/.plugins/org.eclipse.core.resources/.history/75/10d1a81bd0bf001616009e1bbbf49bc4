	public static void makeDice(Player turn){
		Dice one = new Dice();
		turn.dice[0] = one;
		Dice two = new Dice();
		turn.dice[1] = two;
		Dice three = new Dice();
		turn.dice[2] = three;
		Dice four = new Dice();
		turn.dice[3] = four;
		Dice five = new Dice();
		turn.dice[4] = five;
	}
	
	public static void rollDice(Player turn){
		turn.dice[0].roll();
		turn.dice[1].roll();
		turn.dice[2].roll();
		turn.dice[3].roll();
		turn.dice[3].roll();
	}

	public static int getAces(Player turn) {
		return turn.aces;
	}

	public static void setAces(Player turn) {
		int aces = 0;
		for(int i = 0; i < turn.dice.length; i++){
			if(turn.dice[i].getAmountRolled() == 1){
				aces++;
			}
		}
		if(aces == 0){
			
		}
		turn.aces = aces;
	}


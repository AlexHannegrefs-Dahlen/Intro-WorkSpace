package alex.winter_break.test;

import java.io.IOException;
import java.util.ArrayList;

public class Menu {
	private static ArrayList<Double> numbers = new ArrayList<>();

	public static void main(String[] args) throws IOException {
		boolean run = true;
		do {
			run = true;
			String[] options = new String[] { "Add", "Subtract", "Multiply", "Divide", "Fraction Math" };
			int menuSelect = ConsoleUI.promptForMenuSelection(options, true);
			if (menuSelect != 0 && menuSelect != 5) {
				int amountOfNumber = ConsoleUI.promptForInt("How many different numbers would you like to do math to?",
						2, Integer.MAX_VALUE);
				for (int i = 0; i < amountOfNumber; i++) {
					double newNumber = ConsoleUI.promptForDouble("Enter number", Double.MIN_VALUE, Double.MAX_VALUE);
					numbers.add(newNumber);
				}
			}
			if (menuSelect == 0) {
				System.out.println("Quitting");
				run = false;
			} else if (menuSelect == 1) {
				System.out.println(Add.addAllNumbers(numbers));
			} else if (menuSelect == 2) {
				System.out.println(Subtract.subtractAllNumber(numbers));
			} else if (menuSelect == 3) {
				System.out.println(Mutiply.multiplyAllNumber(numbers));
			} else if (menuSelect == 4) {
				System.out.println(Divide.divideAllNumbers(numbers));
			} else if (menuSelect == 5) {
				Fraction.fractionMenu();
			}
		} while (run);
	}

}

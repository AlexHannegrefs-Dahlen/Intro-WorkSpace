import java.io.IOException;
import java.util.ArrayList;

public class Game {
	private static ArrayList<String> code = new ArrayList<>();
	private static ArrayList<String> decoded = new ArrayList<>();

	public static void main(String[] args) throws IOException {
		System.out.println("Enter your code");
		String[] options = new String[] { "Red", "Yellow", "Green", "Blue" };
		do {
			int colorSelect = ConsoleUI.promptForMenuSelection(options, false);
			if (colorSelect == 1) {
				code.add(options[0]);
			} else if (colorSelect == 2) {
				code.add(options[1]);
			} else if (colorSelect == 3) {
				code.add(options[2]);
			} else if (colorSelect == 4) {
				code.add(options[3]);
			}
		} while (code.size() < 4);
		int guesses = 0;
		int amountCorrect = 0;
		do {
			System.out.println("Enter your guess");
			do {
				int guesserColorSelect = ConsoleUI.promptForMenuSelection(options, false);
				if (guesserColorSelect == 1) {
					decoded.add(options[0]);
				} else if (guesserColorSelect == 2) {
					decoded.add(options[1]);
				} else if (guesserColorSelect == 3) {
					decoded.add(options[2]);
				} else if (guesserColorSelect == 4) {
					decoded.add(options[3]);
				}
			} while (decoded.size() < 4);
			amountCorrect = 0;
			if (decoded.get(0).equals(code.get(0))) {
				System.out.println("The code does contain " + decoded.get(0) + ", and you have it in the right spot");
				amountCorrect++;
			} else if (code.contains(decoded.get(0))) {
				System.out.println("The code does contain " + decoded.get(0) + ", but you have it in the wrong spot");
			}
			if (decoded.get(1).equals(code.get(1))) {
				System.out.println("The code does contain " + decoded.get(1) + ", and you have it in the right spot");
				amountCorrect++;
			} else if (code.contains(decoded.get(1))) {
				System.out.println("The code does contain " + decoded.get(1) + ", but you have it in the wrong spot");
			}
			if (decoded.get(2).equals(code.get(2))) {
				System.out.println("The code does contain " + decoded.get(2) + ", and you have it in the right spot");
				amountCorrect++;
			} else if (code.contains(decoded.get(2))) {
				System.out.println("The code does contain " + decoded.get(2) + ", but you have it in the wrong spot");
			}
			if (decoded.get(3).equals(code.get(3))) {
				System.out.println("The code does contain " + decoded.get(3) + ", and you have it in the right spot");
				amountCorrect++;
			} else if (code.contains(decoded.get(3))) {
				System.out.println("The code does contain " + decoded.get(3) + ", but you have it in the wrong spot");
			}

			guesses++;
			decoded.clear();
		} while (guesses < 10 || amountCorrect != 4);
		if (amountCorrect == 4) {
			System.out.println("You won!!. The code was: " + code.toString());
		} else {
			System.out.println("You lost. Hopefully you were close!");
		}
	}

}

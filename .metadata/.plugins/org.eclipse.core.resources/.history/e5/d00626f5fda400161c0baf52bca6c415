package tic.tac.toe;

public class Board {

	public static Square[] makeSquares() {
		//Board.ArrayList<Square> squares = new ArrayList<>();
		Square[] squares = new Square[10];
		squares[0] = null;
		
	for (int i = 1; i < 10; i++) {
			Square Square = new Square();
			Square.SpaceMarker = (char) (i + 48);
			squares[i] = Square;
		}
		/*for (int i = 1; i < squares.size(); i++) {
			System.out.println("Marker " + i + " " + squares.get(i).SpaceMarker);
		}*/
		return squares;
	}

	public static void printGameBoard(Square[] squares) {
		int boardSpaces = 0;
		for (int i = 1; i < 10; i++) {
			System.out.print(squares[i].SpaceMarker);
			boardSpaces++;
			if (boardSpaces == 3) {
				System.out.println();
				boardSpaces = 0;
			}
		}
	}
}
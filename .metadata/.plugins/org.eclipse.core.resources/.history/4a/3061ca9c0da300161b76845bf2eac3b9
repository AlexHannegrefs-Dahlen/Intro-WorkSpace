package tic.tac.toe;

import java.util.ArrayList;

public class Board {

	public static ArrayList<Square> makeSquares(Square Square) {
		final ArrayList<Square> squares = new ArrayList<>();
		squares.add(null);
		for (int i = 1; i < 10; i++) {
			//Square Square = new Square();
			for(int j = 0; j < squares.size(); j++){
			squares.remove(j);
			}
			Square.SpaceMarker = (char) (48 + i);
			squares.add(Square);
		}
		for (int i = 1; i < squares.size(); i++) {
			// System.out.println("Marker " + i + " " +
			// squares.get(i).SpaceMarker);
		}
		return squares;	
	}

	public static void printGameBoard(ArrayList<Square> squares) {
		int boardSpaces = 0;
		for (int i = 1; i < 10; i++) {
			System.out.print(squares.get(i).SpaceMarker);
			boardSpaces++;
			if (boardSpaces == 3) {
				System.out.println();
				boardSpaces = 0;
			}
		}
	}
}
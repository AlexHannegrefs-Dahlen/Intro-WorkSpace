
public class Maze {
	public static void main(String[] args){
		char[][] array = new char[21][21];
		
		array[1][0] = ' ';
		array[1][1] = ' ';
		array[1][2] = ' ';
		array[1][3] = ' ';
		array[2][3] = ' ';
		array[3][3] = ' ';
		array[4][3] = ' ';
		array[5][3] = ' ';
		array[5][4] = ' ';
		array[5][5] = ' ';
		array[5][6] = ' ';
		array[4][6] = ' ';
		array[6][6] = ' ';
		array[7][6] = ' ';
		
		
		for(int i = 0; i < array.length; i++){ 
			for(int j = 0; j < array[i].length; j++){
				if(array[i][j] != ' '){
					array[i][j] = '*';
				}
			}
		}
	
		
		printArray(array);
	}
	
	private static void printArray(char[][] array) {
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[i].length; j++) {
				System.out.print(array[i][j] + " ");
			}
			System.out.println();
		}
	}
}

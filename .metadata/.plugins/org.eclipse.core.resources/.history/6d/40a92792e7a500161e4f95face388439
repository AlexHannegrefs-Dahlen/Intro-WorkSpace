package tic.tac.toe;

public class Board {

	public static Square[][] makeSquares() {
		//ArrayList<ArrayList<Square>> squares = new ArrayList<ArrayList<Square>>();
		Square[][] squares = new Square[3][3];

		int k = 1;

		for (int i = 0; i < squares.length; i++) {
			for (int j = 0; j < squares[i].length; j++) {
				Square Square = new Square();
				Square.SpaceMarker = (char) (k + 48);
				squares[i][j] = Square;
				k++;
			}
		}

		return squares;
	}

	public static void printGameBoard(Square[][] squares) {
		for (int i = 0; i < squares.length; i++) {
			for (int j = 0; j < squares[i].length; j++) {
				System.out.print(squares[i][j].SpaceMarker);
			}
			System.out.println("");
		}
	}
}
package alex.winter_break.test;

import java.io.IOException;

public class Multiple_Functions {
	
	private static double total = 0;
	
	public static void menu() throws IOException{
		total = ConsoleUI.promptForDouble("Enter first number", Double.MIN_VALUE, Double.MAX_VALUE); 
		String[] options = new String[]{"Add", "Subtract", "Multiply", "Divide"};
		boolean quit = false;
		do{
			int menuSelect = ConsoleUI.promptForMenuSelection(options, false);
			double number = ConsoleUI.promptForDouble("Enter next number", Double.MIN_VALUE, Double.MAX_VALUE);
			if(menuSelect == 1){
				total += number;
			} else if (menuSelect == 2){
				total -= number;
			} else if (menuSelect == 3){
				total *= number;
			} else if (menuSelect == 4){
				total /= number;
			}
			System.out.println("Total: " + total);
			quit = ConsoleUI.promptForBool("Would you like to do more math to this number? [y/n]", "y", "n");
		} while (!quit);
	}
}
